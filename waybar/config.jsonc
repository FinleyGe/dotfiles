{
  "layer": "top", // Waybar at top layer
  "height": 32, // Waybar height (to be removed for auto height)
  "margin-top": 4,
  "margin-left": 4,
  "margin-right": 4,
  "spacing": 0, // Gaps between modules (4px)
  "modules-left": [
    "wlr/taskbar"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "network",
    "pulseaudio",
    "cpu",
    "memory",
    "temperature",
    "battery",
    "tray"
  ],
  "custom/logout": {
    "format": "‚èª",
