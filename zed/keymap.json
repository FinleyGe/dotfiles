[
  {
    "context": "Editor",
    "bindings": {
      "ctrl-w": "editor::SelectLargerSyntaxNode",
      "ctrl-shift-W": "editor::SelectSmallerSyntaxNode",
      "ctrl-c": "editor::Cancel"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-enter": "editor::AcceptInlineCompletion",
      "ctrl-,": "editor::ShowCompletions"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space f": "editor::Format",
      "g h": "editor::Hover",
      "space q": "pane::CloseActiveItem",
      "tab": "pane::ActivateNextItem",
      "ctrl-tab": "pane::ActivatePrevItem",
      "; f": "file_finder::Toggle",
      "space c a": "editor::ToggleCodeActions",
      "space r n": "editor::Rename",
      "g j": "editor::GoToDiagnostic",
      "g k": "editor::GoToPrevDiagnostic"
    }
  },
  {
    "context": "Editor && (showing_completions || menu)",
    "bindings": {
      "enter": "editor::ConfirmCompletion",
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrev"
    }
  },
  {
    "context": "workspace",
    "bindings": {
      "space e": "project_search::ToggleFocus"
    }
  }
]
